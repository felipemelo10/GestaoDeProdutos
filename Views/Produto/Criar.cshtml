@model GestaoProdutos.Models.Produto

<div class="container-tela-criar">
    <div class="conteudo">
        <div class="text-center">
            <h1 class="display-4">Cadastrar produto</h1>
        </div>

        <form class="conteudo-form" asp-controller="Produto" asp-action="Criar" method="post">

            <div class="form-group mb-3">
                <label for="Nome">Nome</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Descricao">Descrição</label>
                <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição do produto">
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Valor">Valor</label>
                <input type="number" asp-for="Valor" class="form-control" placeholder="Digite o valor do produto" min="1" id="valorInput">
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Disponivel">Disponível para venda</label>
                <div>
                    @foreach (var value in Enum.GetValues(typeof(GestaoProdutos.Models.EProdutoDisponivel)))
                    {
                        var displayValue = value.ToString();
                        if (value.Equals(GestaoProdutos.Models.EProdutoDisponivel.Sim))
                        {
                            displayValue = "Sim";
                        }

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Disponivel" value="@value" id="disponivel_@value" />
                            <label class="form-check-label" for="disponivel_@value">@displayValue</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Disponivel" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <a class="btn btn-light" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
        </form>
    </div>
    <div class="imagem-tela-criar">
        <img src="/images/gestaoprodutos.png" alt="Alternate Text" />
    </div>
</div>

<script src="/js/site.js"></script>
